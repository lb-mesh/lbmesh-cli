version: "2"
services:

  splunk:
    ports:
      - '<%= splunk_port_admin %>:8000'
      - '1514:1514'
      - '9997:9997'
      - '<%= splunk_port_data %>:8088-8089'
    mem_reservation: 256m
    mem_limit: 1024m
    volumes:
      - <%= splunk_config %>:/opt/splunk/etc
    environment:
      - SPLUNK_START_ARGS=--accept-license
      - SPLUNK_PASSWORD=<%= splunk_env_pass %>
    container_name: lbmesh-integ-splunk
    image: <%= splunk_image %>
    networks:
      - lbmesh-integ-splunk

networks:
  lbmesh-integ-splunk: