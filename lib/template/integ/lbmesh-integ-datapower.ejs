version: "2"
services:
    datapower:
        volumes:
            - '<%= homedir_config %>:/drouter/config'
            - '<%= homedir_local %>:/drouter/local'
        mem_reservation: 4096m
        mem_limit: 4096m
        environment:
            - DATAPOWER_ACCEPT_LICENSE=true
            - DATAPOWER_INTERACTIVE=true
            - DATAPOWER_WORKER_THREADS=2
        ports:
            - '9090:9090'
            - '9022:22'
            - '5550:5550'
            - '5554:5554'
            - '8000-8010:8000-8010'
        image: ibmcom/datapower
        container_name: lbmesh-integ-datapower
~                                     