version: '2'
services:

  odm: 
    container_name: lbmesh-integ-odm
    image: ibmcom/odm:8.10
    mem_reservation: 2048m
    mem_limit: 4096m
    ports:
      - '<%= odm_port_admin %>:9060'
      - '<%= odm_port_data %>:9443'
    environment:
      - 'SAMPLE=false'
      - 'LICENSE=accept'
    volumes:
      - '<%= odm_data %>:/config/dbdata/'
    networks:
      - lbmesh-integ-odm

networks:
  lbmesh-integ-odm:
