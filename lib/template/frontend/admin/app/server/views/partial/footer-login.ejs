                        %>          
                            $.gritter.add({
                                title: 'SYSTEM ALERT NOTICE',
                                text: 'No Permission for this Realm. Please check account access!'
                            });
                        <%
                    break;
                    case 'ACCESS_DENIED':
                        %>          
                            $.gritter.add({
                                title: 'SYSTEM ALERT NOTICE',
                                text: 'Your Session has Expired. Please Login Again!'
                            });
                        <%
                    break;
                }
            }
