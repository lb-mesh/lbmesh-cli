version: '3'
services:

  www:
    build: ./frontend/www
    image: <%= appname%>-www
    container_name: <%= appname%>-www
    restart: always
    ports:
      - <%= port_www %>:<%= port_www %>
    environment:
      - MESSENGER_HOST=localhost
      - MESSENGER_PORT=<%= port_messenger %>
      - DATABANK_HOST=localhost
      - DATABANK_PORT=<%= port_databank %>
      - DB_URL=
      - DB_USER=
      - DB_PASS=
      - DB_HOST=
      - DB_NAME=
      - DB_TYPE=
      - NODE_ENV=production