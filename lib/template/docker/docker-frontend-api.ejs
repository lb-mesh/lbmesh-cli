version: '3'
services:

  api:
    build: ./frontend/api
    image: <%= appname%>-api
    container_name: <%= appname%>-api
    restart: always
    ports:
      - <%= port_api %>:<%= port_api %>
    environment:
      - MESSENGER_HOST=localhost
      - MESSENGER_PORT=<%= port_messenger %>
      - DATABANK_HOST=localhost
      - DATABANK_PORT=<%= port_databank %>
      - APPNAME=<%= appname%>-api
      - 'DB_URL=mongodb://localhost:27017/lbmesh'
      - 'DB_USER='
      - 'DB_PASS='
      - 'DB_HOST='
      - 'DB_NAME='
      - 'DB_TYPE=MONGO'
      - NODE_ENV=production