version: '3'
services:

  api:
    build: ./frontend/api
    image: <%= appname%>-api
    container_name: <%= appname%>-api
    restart: always
    ports:
      - <%= port_api %>:<%= port_api %>
    environment:
      - MESSENGER_HOST=localhost
      - MESSENGER_PORT=<%= port_messenger %>
      - DATABANK_HOST=localhost
      - DATABANK_PORT=<%= port_databank %>
      - DB_URL=
      - DB_USER=
      - DB_PASS=
      - DB_HOST=
      - DB_NAME=
      - DB_TYPE=
      - NODE_ENV=production