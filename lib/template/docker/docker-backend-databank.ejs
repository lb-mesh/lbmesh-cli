version: '3'
services:

  databank:
    build: ./backend/databank
    image: <%= appname%>-databank
    container_name: <%= appname%>-databank
    restart: always
    ports:
      - <%= port_databank %>:<%= port_databank %>
    environment:
      - MESSENGER_HOST=localhost
      - MESSENGER_PORT=<%= port_messenger %>
      - 'DB_URL=mongodb://localhost:27017/lbmesh'
      - 'DB_USER='
      - 'DB_PASS='
      - 'DB_HOST='
      - 'DB_NAME='
      - 'DB_TYPE=MONGO'
      - NODE_ENV=production