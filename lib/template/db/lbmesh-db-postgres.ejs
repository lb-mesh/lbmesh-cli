version: '2'
services:

  postgres:
    image: <%= postgres_image %>
    container_name: lbmesh-db-postgres
    mem_reservation: 64m
    mem_limit: 192m
    volumes:
      - '<%= homedir_data %>:/var/lib/postgresql/data'
    environment:
      POSTGRES_PASSWORD: <%= postgres_env_passwd %>
    ports:
      - '<%= postgres_port %>:5432' 
    networks:
      - lbmesh-db-postgres

networks:
  lbmesh-db-postgres: