version: '2'
services:

  postgres:
    image: <%= postgres_image %>
    container_name: lbmesh-db-postgres
    mem_reservation: 64m
    mem_limit: 192m
    volumes:
      - '<%= homedir_data %>:/var/lib/postgresql/data'
    environment:
      POSTGRES_PASSWORD: <%= postgres_env_passwd %>
    ports:
      - '<%= postgres_port %>:5432' 
    networks:
      - lbmesh-db-postgres

  postgres-admin:
    image: lbmesh/db-postgres-web-admin:latest
    container_name: lbmesh-admin-postgres
    mem_reservation: 64m
    mem_limit: 256m    
    volumes:
      - "<%= homedir_pgadmin %>:/var/lib/pgadmin"
    environment:
      - "PGADMIN_DEFAULT_EMAIL=pgadmin@lbmesh.io"
      - "PGADMIN_DEFAULT_PASSWORD=<%= postgres_env_passwd %>"
      - "PGADMIN_LISTEN_PORT=80"
    depends_on:
      - postgres
    ports:
      - '<%= postgres_admin_port %>:80'
    networks:
      - lbmesh-db-postgres

networks:
  lbmesh-db-postgres: