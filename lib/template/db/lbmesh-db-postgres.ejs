version: '2'
services:

  lbmesh-db-postgres:
    image: <%= postgres_image %>
    container_name: lbmesh-db-postgres
    mem_reservation: 64m
    mem_limit: 192m
    volumes:
      - "<%= homedir_data %>:/var/lib/postgresql/data"
    environment:
      POSTGRES_PASSWORD: lbmesh-db-postgres
    ports:
      - "<%= postgres_port %>:5432" 
    networks:
      - lbmesh-db-postgres

networks:
  lbmesh-db-postgres: