version: '2'
services:

    cloudant:
        image: <%= cloudant_image %>
        container_name: lbmesh-db-cloudant
        hostname: developer.local
        restart: always
        mem_reservation: 128m
        mem_limit: 384m
        ports:
        - "<%= cloudant_port %>:80"
        volumes:
        - ./cloudant/data:/srv
        privileged: true
        network_mode: bridge