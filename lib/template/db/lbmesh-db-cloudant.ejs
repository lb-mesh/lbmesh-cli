version: '2'
services:

  cloudant:
    image: <%= cloudant_image %>
    container_name: lbmesh-db-cloudant
    hostname: developer.local
    mem_reservation: 128m
    mem_limit: 384m
    ports:
      - "<%= cloudant_port %>:80"
    volumes:
      - "<%= homedir_data %>:/srv"
    privileged: true
    networks:
      - lbmesh-db-cloudant

networks:
  lbmesh-db-cloudant: 