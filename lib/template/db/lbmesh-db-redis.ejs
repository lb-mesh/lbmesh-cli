version: '2'
services:

  redis:
    image: <%= redis_image %>
    restart: always
    mem_reservation: 32m
    mem_limit: 128m
    container_name: lbmesh-db-redis
    volumes:
      - "<%= homedir_data%>:/data"
    ports:
      - "<%= redis_port %>:6379"
    networks:
      - lbmesh-db-redis

networks:
  lbmesh-db-redis:
