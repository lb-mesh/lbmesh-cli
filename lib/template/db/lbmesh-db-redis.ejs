version: '2'
services:

  redis:
    image: <%= redis_image %>
    mem_reservation: 32m
    mem_limit: 128m
    container_name: lbmesh-db-redis
    volumes:
      - '<%= homedir_data%>:/data'
    ports:
      - '<%= redis_port %>:6379'
    networks:
      - lbmesh-db-redis

  redis-admin:
    container_name: lbmesh-admin-redis
    hostname: redis-commander
    image: rediscommander/redis-commander:latest
    environment:
    - REDIS_HOSTS=lbmesh-db-redis:redis:6379
    ports:
    - "<%= redis_admin_port %>:8081"
    networks:
      - lbmesh-db-redis

networks:
  lbmesh-db-redis:
