version: '2'
services:

  mysql:
    image: <%= mysql_image %>
    container_name: lbmesh-db-mysql
    mem_reservation: 128m
    mem_limit: 384m
    volumes:
      - '<%= homedir_data %>:/var/lib/mysql'
    ports:
      - '<%= mysql_port %>:3306'
    restart: always
    networks:
      - lbmesh-db-mysql
    environment:
      MYSQL_ROOT_PASSWORD: <%= mysql_env_passwd %>

networks:
  lbmesh-db-mysql: