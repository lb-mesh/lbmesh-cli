version: '2'
services:

  mysql:
    image: <%= mysql_image %>
    container_name: lbmesh-db-mysql
    restart: always
    mem_reservation: 128m
    mem_limit: 384m
    volumes:
      - "<%= homedir_data %>:/var/lib/mysql"
    ports:
      - "<%= mysql_port %>:3306"
    restart: always
    networks:
      - lbmesh-db-mysql
    environment:
      MYSQL_ROOT_PASSWORD: lbmesh-db-mysql

networks:
  lbmesh-db-mysql: