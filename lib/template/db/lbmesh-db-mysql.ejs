version: '2'
services:

  mysql:
    image: <%= mysql_image %>
    container_name: lbmesh-db-mysql
    restart: always
    mem_reservation: 128m
    mem_limit: 384m
    volumes:
      - ./mysql/data:/var/lib/mysql
    ports:
      - "<%= mysql_port %>:3306"
    restart: always
    environment:
      MYSQL_ROOT_PASSWORD: lbmesh-db-mysql