version: '2'
services:

  mongodb:
    image: <%= mongodb_image %>
    restart: always
    mem_reservation: 64m
    mem_limit: 192m
    container_name: lbmesh-db-mongodb
    volumes:
      - ./mongo/data:/data/db
      - ./mongo/config:/data/configdb
    ports:
        - "<%= mongodb_port %>:27017"
    command: mongod