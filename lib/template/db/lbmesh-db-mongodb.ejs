version: '2'
services:

  mongodb:
    image: <%= mongodb_image %>
    restart: always
    mem_reservation: 64m
    mem_limit: 192m
    container_name: lbmesh-db-mongodb
    volumes:
      - "<%= homedir_data %>:/data/db"
      - "<%= homedir_config %>:/data/configdb"
    ports:
        - "<%= mongodb_port %>:27017"
    networks:
      - lbmesh-db-mongodb
    command: mongod

networks:
  lbmesh-db-mongodb: