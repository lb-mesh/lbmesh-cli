version: '2'
services:

  couchdb:
    container_name: 'lbmesh-db-couchdb'
    image: 'couchdb'
    mem_limit: 384m
    mem_reservation: 64m
    ports:
      - '<%= couchdb_port %>:5984'
    volumes:
      - '<%= homedir_data %>:/opt/couchdb/data'
      - '<%= homedir_config %>:/opt/couchdb/etc/local.d'
      - '<%= homedir_log %>:/opt/couchdb/log'
    environment:
      - 'COUCHDB_USER=<%= couchdb_env_user %>'
      - 'COUCHDB_PASSWORD=<%= couchdb_env_passwd %>'
    networks:
      - lbmesh-db-couchdb

networks:
  lbmesh-db-couchdb: