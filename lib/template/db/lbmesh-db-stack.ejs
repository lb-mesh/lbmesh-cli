version: '3'
services:

  mysql:
    image: <%= mysql_image %>
    container_name: lbm-db-mysql
    restart: always
    volumes:
      - ./mysql/data:/var/lib/mysql
    ports:
      - "<%= mysql_port %>:3306"
    restart: always
    environment:
      MYSQL_ROOT_PASSWORD: lbmesh-db-mysql

  cloudant:
    image: <%= cloudant_image %>
    container_name: lbm-db-cloudant
    hostname: developer.local
    restart: always
    ports:
      - "<%= cloudant_port %>:80"
    volumes:
      - ./cloudant/data:/srv
    privileged: true
    network_mode: bridge

  mongodb:
    image: <%= mongo_image %>
    restart: always
    container_name: lbm-db-mongodb
    volumes:
      - ./mongo/data:/data/db
      - ./mongo/config:/data/configdb
    ports:
        - "<%= mongo_port %>:27017"
    command: mongod

  redis:
    image: <%= redis_image %>
    restart: always
    container_name: lbm-db-redis
    volumes:
      - ./redis/data:/data
    ports:
      - "<%= redis_port %>:6379"

  postgres:
    image: <%= postgres_image %>
    restart: always
    container_name: lbm-db-postgres
    volumes:
      - ./postgres/data:/var/lib/postgresql/data
    environment:
      POSTGRES_PASSWORD: lbmesh-db-postgres
    ports:
      - "<%= postgres_port %>:5432"  
  
  